{
    "name": "nest-ssr-customer",
    "version": "1.0.0",
    "description": "基于 Nestjs、Vue3 组装的SSR框架，简单、易学易用、方便扩展、集成Nestjs的Vue SSR框架。",
    "private": true,
    "scripts": {
        "install": "yarn install --ignore-scripts",
        "dev": "nest start --watch",
        "start": "node dist/main.js",
        "build": "nest build",
        "build:web": "npm run build:web:client && npm run build:web:server",
        "build:web:client": "vite --config web/vite.config.ts build --ssrManifest --outDir ../build/client",
        "build:web:server": "vite --config web/vite.config.ts build --ssr entry-server --outDir ../build/server"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.2",
        "@nestjs/core": "^10.3.2",
        "@nestjs/platform-express": "^10.3.2",
        "axios": "^1.9.0",
        "cross-env": "^6.0.3",
        "express": "^5.1.0",
        "naive-ui": "^2.41.0",
        "pinia": "^3.0.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "stream": "^0.0.3",
        "vite": "^4.5.14",
        "vue": "^3.5.14",
        "vue-router": "^4.5.1",
        "unplugin-vue-components": "^28.5.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.2",
        "@nestjs/schematics": "^10.1.1",
        "@css-render/vue3-ssr": "^0.15.14",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.7",
        "@types/express": "^5.0.2",
        "@types/node": "^20.11.30",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vitejs/plugin-vue-jsx": "^3.1.0",
        "prettier": "^3.4.2",
        "sass": "1.77.6",
        "typescript": "^5.7.3",
        "rollup-plugin-analyzer": "^4.0.0",
        "vite-plugin-compression": "^0.5.1"
    }
}
