{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "noImplicitThis": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "pretty": true,
        "declaration": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "esModuleInterop": true,
        "typeRoots": ["./env.d.ts", "./node_modules/@types"],
        "outDir": "dist",
        "paths": {
            "@server/*": ["./server/*"],
            "@/*": ["./web/*"],
            "~/*": ["./*"]
        }
    },
    "exclude": ["dist", "node_modules", "web"]
}
